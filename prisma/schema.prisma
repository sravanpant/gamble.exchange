// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id // This will be the wallet address
  walletAddress String    @unique
  points        Int       @default(1000)
  isFirstLogin  Boolean   @default(true)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  lastLoginAt   DateTime?

  minesGames MinesGame[]

  @@index([walletAddress])
}

model MinesGame {
  id                String   @id @default(cuid())
  userId            String // Changed to required
  betAmount         Int // Changed to required (removed ?)
  currentMultiplier Float    @default(1.0)
  cashOutMultiplier Float?
  autoCashOut       Float?
  gridSize          Int      @default(25)
  minesCount        Int      @default(5)
  minePositions     Json
  revealedCells     Json     @default("[]")
  gameStatus        String   @default("active")
  winAmount         Int?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  user User @relation(fields: [userId], references: [id])
}
